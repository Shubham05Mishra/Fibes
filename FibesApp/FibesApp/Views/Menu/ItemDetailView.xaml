<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FibesApp.Views.Menu.ItemDetailView"
             xmlns:local="clr-namespace:FibesApp.CustomControls"
             NavigationPage.HasNavigationBar="False" BackgroundColor="{StaticResource AppBackgroundColor}">
    <ContentPage.Content>
        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="60,*"  RowSpacing="20" IsEnabled="{Binding IsPageEnable}">
            <Grid.Margin>
                <!--Platform Specific code for Top Margin for iOS-->
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform ="iOS" Value="12,25,12,12"/>
                    <On Platform="Android" Value="0"/>
                </OnPlatform>
            </Grid.Margin>
            <!--Header Section-->
            <Grid Grid.Row="0" HorizontalOptions="FillAndExpand" Margin="10,0"  ColumnSpacing="20" VerticalOptions="FillAndExpand" ColumnDefinitions="30,*,30,30">
                <!--BackButton-->
                <Grid Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
                    <Image Source="backbutton.png" Aspect="AspectFill" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" HeightRequest="30"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Back_Command}" NumberOfTapsRequired="1"/>
                    </Grid.GestureRecognizers>
                </Grid>
                <!--Like Button Section-->
                <Grid Grid.Column="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="1">
                    <Image Source="{Binding LikeImage}" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LikeCommand}"/>
                    </Grid.GestureRecognizers>
                </Grid>
                <!--Box Button Section-->
                <Grid Grid.Column="3" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <Image Source="archive.png" Aspect="AspectFit" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BoxCommand}"/>
                    </Grid.GestureRecognizers>
                </Grid>
            </Grid>
            <!--Body Section-->
            <ScrollView Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  RowDefinitions="Auto,Auto">
                    <!--Fabric Product Section-->
                    <Grid  Grid.Row="0" HorizontalOptions="FillAndExpand" Margin="0,10,0,0" RowSpacing="10" 
                       VerticalOptions="FillAndExpand" RowDefinitions="80,40,500,Auto">
                        <!--Fabric Name-->
                        <Grid Grid.Row="0"  Margin="20,0,0,0" HorizontalOptions="FillAndExpand" RowSpacing="0" VerticalOptions="FillAndExpand" RowDefinitions="Auto,Auto">
                            <Label Grid.Row="0" Text="DAVOS"  FontSize="30" FontAttributes="Bold"  TextColor="{StaticResource AppBlackColor}"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                            <Label Grid.Row="1" Text="Fibreguard"  FontSize="18" TextColor="{StaticResource AppGrayColor}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                        </Grid>
                        <!--Overview, Features Section-->
                        <Grid Grid.Row="1" HorizontalOptions="FillAndExpand" Margin="0" VerticalOptions="FillAndExpand" RowSpacing="0" RowDefinitions="*,3">
                            <Grid Grid.Row="0"  HorizontalOptions="FillAndExpand" ColumnSpacing="0" Margin="10,0,10,0"
                      VerticalOptions="FillAndExpand" ColumnDefinitions="*,*,80">
                                        <!--Overview Button-->
                                <Grid Grid.Column="0" Margin="20,0,0,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Label Text="Overview" FontSize="15" FontAttributes="{Binding OverviewFontAttribute}"
                           TextColor="{Binding OverviewTextColor}" HorizontalOptions="StartAndExpand" 
                           HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand"/>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding OverviewCommand}"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                                <!--Features Button-->
                                <Grid Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <Label  Text="Features" FontSize="15" FontAttributes="{Binding FeaturesFontAttribute}"
                           TextColor="{Binding FeaturesTextColor}" BackgroundColor="Transparent" HorizontalOptions="CenterAndExpand" 
                           HorizontalTextAlignment="Start" VerticalOptions="CenterAndExpand"/>
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding FeaturesCommand}"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </Grid>
                            <!--Button Indicator Section-->
                            <Grid Grid.Row="1"  HorizontalOptions="FillAndExpand"  VerticalOptions="FillAndExpand" 
                      ColumnDefinitions="*,*,80" ColumnSpacing="0">
                                <BoxView Grid.Column="0" BackgroundColor="{StaticResource AppPurpleColor}" 
                             IsVisible="{Binding OverviewVisility}" HorizontalOptions="CenterAndExpand" WidthRequest="40" Margin="-5,0,0,0"
                             VerticalOptions="FillAndExpand" />
                                <BoxView Grid.Column="1" BackgroundColor="{StaticResource AppPurpleColor}" WidthRequest="40" Margin="-5,0,0,0"
                             IsVisible="{Binding FeaturesVisility}" HorizontalOptions="CenterAndExpand"
                             VerticalOptions="FillAndExpand"/>
                            </Grid>
                        </Grid>
                        <!--Overview List-->
                        <CollectionView Grid.Row="2" ItemsSource="{Binding ItemsList}"
                                    IsVisible="{Binding OverviewVisility}" HorizontalOptions="FillAndExpand"
                                    VerticalOptions="StartAndExpand">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Horizontal" Span="1" 
                                             VerticalItemSpacing="15" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <!--Main Grid for List-->
                                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  HeightRequest="{Binding ItemHeight}"
                                      Padding="15,0,0,0" >
                                        <Frame Padding="0" IsClippedToBounds="True" HasShadow="False" BorderColor="LightGray" CornerRadius="13" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                            <Image Source="{Binding ItemImage}" Aspect="AspectFill" HeightRequest="200"  WidthRequest="300" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <!--Features-->
                        <Grid Grid.Row="2" IsVisible="{Binding FeaturesVisility}" HorizontalOptions="FillAndExpand" Padding="20,25" RowSpacing="15" VerticalOptions="CenterAndExpand" BackgroundColor="{StaticResource AppLightGrayColor}"  RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                            <!--Composition-->
                            <Grid Grid.Row="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Composition" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15"  Text="{Binding Composition}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Width" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Width}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Weight" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Weight}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="3" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Durability" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Durability}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="4" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Flame resistance" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding FlameResistance}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="5" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Lightfastness" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Lightfastness}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="6" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Pilling" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Pilling}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="7" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Care" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Care}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="8" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Use" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" Text="{Binding Use}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="9" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Certificate" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Certificate}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                            <!--Composition-->
                            <Grid Grid.Row="10" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                                <Label Grid.Column="0" FontSize="15" Text="Availability" TextColor="{StaticResource AppGrayColor}" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand"/>
                                <Label Grid.Column="1" FontSize="15" Text="{Binding Availability}" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
                            </Grid>
                        </Grid>
                        <!--Length and Price-->
                        <Grid Grid.Row="3" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Margin="15,20" RowSpacing="10" RowDefinitions="Auto,Auto,Auto" >
                            <!--Label Length and Price-->
                            <Grid Grid.Row="0"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="60*,40*">
                                <!--Length-->
                                <Grid Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="Auto,Auto">
                                    <Label Grid.Row="0" Text="Length" TextColor="{StaticResource AppBlackColor}" FontSize="15" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                                    <Grid Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnSpacing="5" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto">
                                        <!--Unit Value Entry-->
                                        <Frame Grid.Column="0" IsClippedToBounds="True" HasShadow="False"  Margin="0" Padding="4,0,4,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="30" WidthRequest="40" CornerRadius="8" BorderColor="{StaticResource AppPurpleColor}" >
                                            <local:CustomEntry Grid.Column="0" TranslationY="1" Keyboard="Numeric" MaxLength="2" TranslationX="2" HorizontalTextAlignment="Center" Text="{Binding UnitValue}" Placeholder="00" PlaceholderColor="{StaticResource AppGrayColor}" FontSize="14" TextColor="{StaticResource AppBlackColor}" HeightRequest="50" WidthRequest="50" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                                        </Frame>
                                        <!--Dot(.) Label between meter and cntimeter--> 
                                        <Label Grid.Column="1" Margin="0" Text="." TextColor="{StaticResource AppBlackColor}" FontSize="20" VerticalOptions="EndAndExpand" HorizontalOptions="FillAndExpand"/>
                                        <!--DecimalUnit Value Entry--> 
                                        <Frame Grid.Column="2" HasShadow="False"  IsClippedToBounds="True" Padding="4,0,4,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="30" WidthRequest="40" CornerRadius="8" BorderColor="{StaticResource AppPurpleColor}" >
                                            <local:CustomEntry Grid.Column="0" Keyboard="Numeric" MaxLength="2" TranslationY="1"   Text="{Binding DecimalUnitValue}" Placeholder="00" PlaceholderColor="{StaticResource AppGrayColor}" FontSize="14" HorizontalTextAlignment="Center" TextColor="{StaticResource AppBlackColor}" HeightRequest="50" WidthRequest="50" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                                        </Frame>
                                        <!--Unit Label--> 
                                        <Frame Grid.Column="3" Margin="5,0" IsClippedToBounds="True" HasShadow="False"  Padding="5,0,5,0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="30" WidthRequest="50" CornerRadius="8" BorderColor="{StaticResource AppPurpleColor}" >
                                            <Label Grid.Column="0" Text="{Binding MeasuringUnit}" TranslationY="-2" FontSize="16" TextColor="{StaticResource AppBlackColor}"  VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center" />
                                        </Frame>
                                        <!--Unit Change Section--> 
                                        <Grid Grid.Column="4" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="Auto,Auto">
                                            <ImageButton Grid.Row="0" Source="up.png" Command="{Binding MeasuringUnitUpCommand}" BackgroundColor="{StaticResource AppLightGrayColor}" HeightRequest="15" WidthRequest="20" Padding="3" HorizontalOptions="FillAndExpand" VerticalOptions="Start" Aspect="AspectFit" />
                                            <ImageButton Grid.Row="1" Source="down.png" Command="{Binding MeasuringUnitDownCommand}" BackgroundColor="{StaticResource AppLightGrayColor}" HeightRequest="15" WidthRequest="20" Padding="3" HorizontalOptions="FillAndExpand" VerticalOptions="End" Aspect="AspectFit" />
                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="1" HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="Auto,Auto">
                                    <Label Grid.Row="0"  Text="Price" TextColor="{StaticResource AppBlackColor}" FontSize="15" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                                    <Label Grid.Row="1" Text="Kr 230.20" TextColor="{StaticResource AppBlueColor}" FontSize="23" FontAttributes="Bold" />
                                </Grid>
                            </Grid>
                            <!--Button Add to Box-->
                            <Grid Grid.Row="2" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="60*,Auto">
                                <Grid Grid.Column="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnSpacing="20" RowDefinitions="Auto,Auto">
                                    <Label Grid.Row="0"  Text="Colour name" TextColor="{StaticResource AppBlackColor}" FontSize="15" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" />
                                    <Frame Grid.Row="1"  IsClippedToBounds="True"  Padding="0" Margin="0,0,40,0"  HasShadow="False" BorderColor="{StaticResource AppLightGrayColor}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HeightRequest="50" WidthRequest="50"  >
                                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
                                            <local:CustomPicker  Title="Colour Name"  Margin="12,0" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand"
                                             ItemsSource="{Binding Colour}" ItemDisplayBinding="{Binding colourName}"/>
                                            <Image  Source="down.png" Aspect="AspectFit" Margin="12"   HorizontalOptions="EndAndExpand" VerticalOptions="FillAndExpand"/>
                                        </Grid>
                                    </Frame>
                                </Grid>
                                <Button  Grid.Column="1" Text="Add to box" Command="{Binding AddToBoxCommand}"  TextTransform="None" Padding="5"  FontSize="16" BackgroundColor="{StaticResource AppDarkBlueColor}" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" TextColor="White" HeightRequest="50" WidthRequest="100"  CornerRadius="5"/>
                            </Grid>
                        </Grid>
                    </Grid>
                    <!--Similar Product Section-->
                    <Grid Grid.Row="1"   HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="50,300" BackgroundColor="{StaticResource AppLightGrayColor}">
                        <Grid Grid.Row="0"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,Auto" >
                            <!--Label Similar Product-->
                            <Label Grid.Column="0" Text="Similar Product"  Margin="20,20,0,0"  TextColor="{StaticResource AppBlackColor}" FontSize="15" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                            <!--Label See All-->
                            <Grid Grid.Column="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                <Label  Text="See All"  Margin="20,20,15,0" FontSize="15" HorizontalOptions="EndAndExpand" TextColor="{StaticResource AppBlackColor}" VerticalOptions="FillAndExpand"/>
                            </Grid>
                        </Grid>
                        <!--Similar Product List-->
                        <Grid Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="10,10">
                            <CollectionView  ItemsSource="{Binding SimilarProductList}"  HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">
                                <CollectionView.ItemsLayout>
                                    <GridItemsLayout Orientation="Horizontal" Span="1" 
                                             VerticalItemSpacing="15" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <!--Main Grid for List-->
                                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Padding="15,0,0,20" >
                                            <Frame Padding="0" IsClippedToBounds="True" HasShadow="False" BorderColor="{StaticResource AppBackgroundColor}"  BackgroundColor="{StaticResource AppBackgroundColor}" CornerRadius="13" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                                <Grid  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowSpacing="10" RowDefinitions="*,Auto,Auto" Margin="0,0,0,10">
                                                    <Image Grid.Row="0" Source="{Binding ItemImage}" Aspect="AspectFill" HeightRequest="200"  WidthRequest="200" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                                    <Label Grid.Row="1"  Padding="10,0" Text="{Binding FabricName}"  TextColor="{StaticResource AppBlackColor}"/>
                                                    <Label Grid.Row="2" Padding="10,0"   Text="{Binding FabricBrand}" TextColor="{StaticResource AppBlackColor}"/>
                                                </Grid>
                                            </Frame>
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </Grid>

                </Grid>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>