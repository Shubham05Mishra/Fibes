<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:local="clr-namespace:FibesApp.CustomControls"
             x:Class="FibesApp.Views.PopUp.FilterItemView">
    <!--Main Grid-->
    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="60,*" >
        <!--Arrow Image-->
        <Grid Grid.Row="0" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <Image HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Source="DownArrow.png" Aspect="Fill"/>
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding DownArrowCommand}"/>
            </Grid.GestureRecognizers>
        </Grid>
        <!--Frame for round corner-->
        <Frame Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" CornerRadius="30" BackgroundColor="{StaticResource AppBackgroundColor}">
            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="60,*" RowSpacing="5">
                <!--Filter Label-->
                <Label Grid.Row="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Text="Filters" TextColor="{StaticResource AppBlackColor}" FontSize="20"/>
                <!--Scroll View-->
                <ScrollView Grid.Row="1" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Never">
                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" RowDefinitions="50,10,50,40,50,40,100,40,80,30,200">
                        <!--My Collection Section-->
                        <Label Grid.Row="0" Text="My collection" TextColor="{StaticResource AppBlackColor}" FontSize="16" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" FontAttributes="Bold"/>
                        <Label Grid.Row="0" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand" FontSize="14">
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="{Binding TotalItemsInCollection}" TextColor="{StaticResource AppGrayColor}"/>
                                        <Span Text=" products" TextColor="{StaticResource AppGrayColor}"/>
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Switch Grid.Row="0" x:Name="CollectionSwitch" VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand" OnColor="{StaticResource AppDarkBlueColor}" ThumbColor="#bca3e7"/>
                        <!--All Products Section-->
                        <Label Grid.Row="2" Text="All products" TextColor="{StaticResource AppBlackColor}" FontSize="16" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" FontAttributes="Bold"/>
                        <Label Grid.Row="2" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand" FontSize="14">
                            <Label.FormattedText>
                                <FormattedString>
                                    <FormattedString.Spans>
                                        <Span Text="{Binding TotalItemsInProducts}" TextColor="{StaticResource AppGrayColor}"/>
                                        <Span Text=" products" TextColor="{StaticResource AppGrayColor}"/>
                                    </FormattedString.Spans>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Switch Grid.Row="2" x:Name="ProductSwitch"  VerticalOptions="FillAndExpand" HorizontalOptions="EndAndExpand" OnColor="{StaticResource AppDarkBlueColor}" ThumbColor="#bca3e7"/>
                        <!--Price Range-->
                        <Label Grid.Row="3" Text="Price Range" FontAttributes="Bold" TextColor="{StaticResource AppBlackColor}" FontSize="16" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand"/>
                        <Grid Grid.Row="4" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ColumnDefinitions="*,*" ColumnSpacing="15">
                            <!--Frame for Min price-->
                            <Frame Grid.Column="0" BorderColor="LightGray" Padding="0" CornerRadius="8" HasShadow="False">
                                <local:CustomEntry Placeholder="Min Price" PlaceholderColor="LightGray" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" FontSize="16" Margin="15,0,0,0" Keyboard="Numeric" MaxLength="5"/>
                            </Frame>
                            <!--Frame for Max price-->
                            <Frame Grid.Column="1" BorderColor="LightGray" Padding="0" CornerRadius="8" HasShadow="False">
                                <local:CustomEntry Placeholder="Max Price" PlaceholderColor="LightGray" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" FontSize="16" Margin="15,0,0,0" Keyboard="Numeric" MaxLength="5"/>
                            </Frame>
                        </Grid>
                        <!--Sort By-->
                        <Label Grid.Row="5" Text="Sort By" TextColor="{StaticResource AppBlackColor}" FontAttributes="Bold" FontSize="16" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand"/>
                        <CollectionView Grid.Row="6" ItemsSource="{Binding SortList}" >
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="3" VerticalItemSpacing="15" HorizontalItemSpacing="15"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  HeightRequest="40" WidthRequest="100">
                                        <Button Text="{Binding SortButtonText}" Clicked="SortedItem" TextColor="{Binding BtnTextColor}" BorderWidth="1"  BorderColor="{Binding BtnBorderColor}" CornerRadius="8" TextTransform="None"  BackgroundColor="{Binding BtnBackgroundColor}" HeightRequest="50"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"></Button>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <!--Composition-->
                        <Label Grid.Row="7" Text="Composition" TextColor="{StaticResource AppBlackColor}" FontSize="16" FontAttributes="Bold" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand"/>
                        <CollectionView Grid.Row="8" ItemsSource="{Binding CompositionList}" >
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="4" VerticalItemSpacing="15" HorizontalItemSpacing="15"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  HeightRequest="30" WidthRequest="120" Padding="0">
                                        <Button Text="{Binding CompositionButtonText}" Clicked="CompositionItem"  BorderWidth="1"  BorderColor="Transparent" CornerRadius="15" Padding="0" FontSize="12" TextTransform="None" TextColor="{Binding CompositionBtnTextColor}"  BackgroundColor="{Binding CompositionBtnBackgroundColor}" HeightRequest="30"  HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <!--Composition-->
                        <Label Grid.Row="9" Text="Brands" TextColor="{StaticResource AppBlackColor}" FontSize="15" FontAttributes="Bold" HorizontalOptions="StartAndExpand" VerticalOptions="EndAndExpand"/>
                        <ListView Grid.Row="10" HasUnevenRows="False"  ItemsSource="{Binding BrandList}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  HeightRequest="50"  Padding="0" ColumnDefinitions="Auto,*">
                                            <CheckBox x:Name="Check" Grid.Column="0" Color="{Binding CheckBoxBorderColor}" CheckedChanged="CheckBoxItem" />
                                            <Label Grid.Column="1" Text="{Binding BrandName}"  Padding="0" FontSize="15" FontAttributes="{Binding BrandListFontAttribute}"  BackgroundColor="{StaticResource AppBackgroundColor}" HeightRequest="50"  VerticalTextAlignment="Center" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </ScrollView>
            </Grid>
        </Frame>
    </Grid>
</pages:PopupPage>